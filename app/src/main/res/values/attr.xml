<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="BannerView">
        <attr name="canLoop" format="boolean" />
        <attr name="PaddingLeft" format="dimension" />
        <attr name="PaddingRight" format="dimension" />
        <attr name="indicatorMarginLeft" format="dimension" />
        <attr name="indicatorMarginRight" format="dimension" />
        <attr name="indicatorMarginTop" format="dimension" />
        <attr name="indicatorMarginBottom" format="dimension" />
        <attr name="indicatorAlign">
            <enum name="left" value="0" />
            <enum name="center" value="1" />
            <enum name="right" value="2" />
        </attr>
    </declare-styleable>

    <declare-styleable name="ProgressView">
        <attr name="progress_background" format="color|reference" />
        <attr name="progress_color" format="color|reference" />
        <attr name="progress_radius" format="dimension" />
        <attr name="progress_stroke_width" format="dimension" />
        <attr name="progress_title_color" format="color|reference" />
        <attr name="progress_value_color" format="color|reference" />
        <attr name="progress_title_text_size" format="dimension" />
        <attr name="progress_value_text_size" format="dimension" />
        <attr name="progress_padding" format="dimension" />
        <attr name="progress_title" format="string" />
    </declare-styleable>
</resources>